<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:slstudio="clr-namespace:SLStudio">
    <Style TargetType="{x:Type slstudio:View}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type slstudio:View}">
                    <ContentControl Content="{TemplateBinding ViewModel, Converter={slstudio:ViewContentConverter}}"
                                    DataContext="{TemplateBinding ViewModel}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>