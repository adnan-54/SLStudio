<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--StudioActionsStackPanelStyle-->
    <Style x:Key="StudioActionsStackPanelStyle" TargetType="{x:Type StackPanel}">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="{StaticResource UpMargin}"/>
        <Style.Resources>
            <!--ButtonStyle-->
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Margin" Value="{StaticResource LeftMargin}"/>
                <Setter Property="Padding" Value="24, 3, 24, 3"/>
            </Style>
        </Style.Resources>
    </Style>
</ResourceDictionary>