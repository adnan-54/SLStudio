<UserControl x:Class="SLStudio.TexEditor.Modules.TexEditor.Views.TexEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:ae="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <xctk:BusyIndicator IsBusy="{Binding IsBusy}">
        <ae:TextEditor Document="{Binding TextDocument}"
                       ShowLineNumbers="True" FontFamily="Consolas" FontSize="14"
                       LineNumbersForeground="{StaticResource Focused}"
                       Background="{StaticResource Editor.Background}"
                       HorizontalScrollBarVisibility="Auto"
                       SyntaxHighlighting="XML">
        </ae:TextEditor>
    </xctk:BusyIndicator>
</UserControl>