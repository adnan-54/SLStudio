<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:SLStudio.Core.Controls">

    <!--ListboxLineNumberMarginStyle-->
    <Style TargetType="{x:Type controls:ListboxLineNumberMargin}">
        <Setter Property="Control.Foreground" Value="{StaticResource Focused}" />
        <Setter Property="Control.Background" Value="{StaticResource Control.Background}" />
        <Setter Property="Control.FontWeight" Value="SemiBold" />
        <Setter Property="Control.Margin" Value="3, 3, 3, 3" />
    </Style>
</ResourceDictionary>