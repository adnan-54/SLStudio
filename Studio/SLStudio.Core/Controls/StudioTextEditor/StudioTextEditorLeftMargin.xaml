<UserControl x:Class="SLStudio.Core.Controls.StudioTextEditorLeftMargin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SLStudio.Core.Controls"
             mc:Ignorable="d" d:DesignHeight="600" FontWeight="Bold">
    <Grid Background="{StaticResource Editor.Background}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="50" />
        </Grid.ColumnDefinitions>

        <ContentControl Margin="6, 0, 16, 0" HorizontalAlignment="Right" 
                        Content="{Binding MarginContent, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Grid>
</UserControl>